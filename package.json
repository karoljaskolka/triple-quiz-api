{
  "name": "triple-quiz-api",
  "version": "0.0.0",
  "description": "Triple Quiz Express.js API",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "watch": "nodemon src/app.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix .",
    "lint:check": "eslint .",
    "lint-staged:quiet": "lint-staged --quiet",
    "commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pre-commit": [
    "commit"
  ],
  "author": "Karol Jaskolka",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "eslint": "^8.18.0",
    "lint-staged": "^13.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.7.1"
  }
}
